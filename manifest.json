{
  "manifest_version": 3,
  "name": "Satellite Data Grabber Telkomsat",
  "version": "1.0",
  "description": "Grab Forward & Return Satellite Bits/Throughput data from dashboard widgets.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png", 
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}